<p id="notice"><%= notice %></p>

<h1>Weekly Goals</h1>

<table>
  <thead>
    <tr>
      <th>Begin date</th>
      <th>End date</th>
      <th>Fault tolerance</th>
      <th>Momentum</th>
      <th>Category</th>
      <th>App</th>
      <th>Target time min</th>
      <th>Successful</th>
      <th>Actual time min</th>
      <th>Days goal completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weekly_goals.each do |weekly_goal| %>
      <tr>
        <td><%= weekly_goal.begin_date %></td>
        <td><%= weekly_goal.end_date %></td>
        <td><%= weekly_goal.fault_tolerance %></td>
        <td><%= weekly_goal.momentum %></td>
        <td><%= weekly_goal.category_id %></td>
        <td><%= weekly_goal.app_id %></td>
        <td><%= weekly_goal.target_time_min %></td>
        <td><%= weekly_goal.successful %></td>
        <td><%= weekly_goal.actual_time_min %></td>
        <td><%= weekly_goal.days_goal_completed %></td>
        <td><%= link_to 'Show', weekly_goal %></td>
        <td><%= link_to 'Edit', edit_weekly_goal_path(weekly_goal) %></td>
        <td><%= link_to 'Destroy', weekly_goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

